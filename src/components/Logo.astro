---
export type Props = {
  classLogo: string
}
const { classLogo } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  data-name="Layer 3"
  viewBox="0 0 54 55.84"
  class={classLogo}
  id="logoJotadev"
>
  <defs>
    <linearGradient
      id="a"
      x1="27"
      x2="27"
      y1="55.84"
      gradientUnits="userSpaceOnUse"
    >
      <stop offset="0" stop-color="#573E78"></stop>
      <stop offset="1" stop-color="#1E3466"></stop>
    </linearGradient>
  </defs>
  <path
    fill="url(#a)"
    d="M45.67 0H7.58C1.16 0 0 7.42 0 7.42v40.75c0 2.58 1.33 7.67 6.75 7.67h9.5l5.42-4.92a11.76 11.76 0 0 0 5.33.5c5-.69 11.65-3.87 11.88-13.17.35-14.75.21-29.42.21-29.42l6.08-.08s-.08 21 0 30.92-11.34 16.16-11.34 16.16h12.34A8.92 8.92 0 0 0 54 47.08V7.33C54 5 51.92 0 45.67 0Zm-29 8.82c4-.14 13.72 0 13.72 0V37c0 .2-.6 5.9-5.31 5.88a6.55 6.55 0 0 1-6.75-5.71 11.58 11.58 0 0 1 .06-3.86L8.25 39.29V17.2a9 9 0 0 1 8.46-8.38Z"
  ></path>
</svg>

<script>
  const $logo:SVGAElement = document.querySelector("#logoJotadev")
  const logoTheme = {
    light: ['573E78','1E3466'],
    dark: ['EEC9F2','dcf1fa']
  }
  const handleToggleTheme = () => {
    const theme:string = document.documentElement.classList[0] ?? 'light';
    $logo.querySelectorAll("stop").forEach((stop, i) => {
    stop.setAttribute("stop-color",`#${logoTheme[theme][i]}`)
  })
  }
  handleToggleTheme()
  document.getElementById("themeToggle").addEventListener("click", handleToggleTheme);

</script>